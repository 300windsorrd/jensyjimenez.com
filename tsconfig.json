{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "content/**/*",
    "next-env.d.ts",
    "mdx.d.ts",
    "scripts/**/*",
    "tests/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "Tool & Components"]
}
